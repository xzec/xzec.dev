---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="In need of a Software engineer? Get in touch and let's figure out how I can help."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="background-pattern">
    <div class="relative mx-auto h-[100vh] max-w-4xl px-2.5 pt-2.5">
      <slot />
    </div>
  </body>
</html>
